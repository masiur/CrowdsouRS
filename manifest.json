{
  "manifest_version": 2,

  "name": "Trust & Reputation System",
  "description": "Goal is to take user review for online contents",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "contextMenus",
    "*://*/*",
    "http://localhost:8000/api/trs/post",
    "http://localhost:8000/api/trs/show"
  ],
  

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script/jquery.easing.min.js","script/jquery.easypiechart.js" ,"script/modal.js"],
      "run_at": "document_end" // ‘document_end’ after DOM complete but before images 
    }
  ],
  "background": {
        "persistent": false,
        "scripts": ["script/jquery-3.1.1.min.js","background.js"],
         "pages": ["background.html"]
    },

  "browser_action": {
    // "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "TRS"
  },
  
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'"
}